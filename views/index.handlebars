
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>We got the Burgers!</title>
</head>
<body>

        <div class="row">
            <div class="col-md-12 text-center">
                <h1>What Time is it? BurgerTime! Yeah Boyeee!!</h1>
            </div>
        </div>
    <div class="container">
        
        <div class="row">
            <div class="col-md-4 text-center">
                        <h2>Burgers on Deck</h2>
                
                    {{#each burgers}}
                    {{#unless this.devoured}}
                   <h6> {{burger_name}}  </h6><button class="btn btn-sm" id="eatBurger">Eat Me!</button>
                   {{/unless}}
                    {{/each}}
                

            </div>
       
        <div class="col-md-4">
                <img src="http://www.placepuppy.net/400/250" alt="Burger Puppy!">
        </div>
        <div class="col-md-4 text-center">
            {{!-- This div will hold the burgers devoured query --}}
                    <h2>Burgers Ate!</h2>
                     {{#each burgers}}
                    <h6>{{burger_name}}<h6>
                    {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
             <form class="form-horizontal">
                             <div class="form-group form-group-lg text-center">
                                <label class="col-md-6 control-label" for="formGroupInputLarge"> <h2>What's your creation</h2></label>
                                 <div class="col-md-12 text-center">
                                <input class="form-control" type="text" id="userBurgerInput" placeholder="Creat your favorite burger here....">
                                 <button type="submit" id="userOrderButton" class="btn btn-default btn-sm btn-primary">Order</button>
                                </div>
                             </div>
                </form>

        </div>
    </div>

 </div>
            <script>
                        $(document).ready(() => {
                          orderButtonEvent();
                          eatDaBurger();
                
                        });

                        let orderButtonEvent = () => {
                            $("#userOrderButton").on("click", (e) => {
                               let newBurger = {
                                   burger_name: $("#userBurgerInput").val().trim()
                               } 
                               console.log(newBurger);
                               let url = window.location.origin;
                               $.post(url + "/api/burgers", newBurger, (data) => {
                                    location.reload();
                               })

                            })
                        }

                        let eatDaBurger = () => {
                            $("#eatBurger").on("click",() => {
                                alert("You clicked Eat Da Burger!")
                                location.reload();
                            })
                        }

                    


                    


            </script>


    
</body>

